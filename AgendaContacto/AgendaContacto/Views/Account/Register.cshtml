@model AgendaContacto.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar Usuario";
}
<br />
<div class="container animated 	pulse">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-7 ">
            <div class="card" style="border:0px">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Registrar Usuario</h4>

                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <b>@Html.LabelFor(m => m.Email, new { @class = "control-label" }):</b>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <b>@Html.LabelFor(m => m.Password, new { @class = "control-label" }):</b>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <b>@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" }):</b>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-14">
                                    <input type="submit" class="btn btn-primary btn-block" value="Registrar Usuario" />

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }
